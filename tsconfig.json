{
  "compilerOptions": {
    "target": "ES2018",
    "useDefineForClassFields": true,
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "sourceMap": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,

    "strict": true,
  },
  "include": ["src"]
}
